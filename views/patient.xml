<?xml version="1.0" encoding="utf-8"?>
<odoo>

<record id="view_hospital_patient_tree" model="ir.ui.view">
  <field name="name">hospital.patient.tree</field>
  <field name="model">hospital.patient</field>
  <field name="arch" type="xml">

    <!-- export_xlsx="0" use of this export can disable -->
    <tree export_xlsx="0">
      <field name="name" string="Patient Name"/>
      <field name="ref"/>
      <field name="age"/>
      <field name="gender" invisible="context.get('hide_gender')"/>
      <field name="appointment_count" sum="Total Appointment"/>
      <field name="tag_ids" widget="many2many_tags" options="{'color_field' : 'color'}"/>
    </tree>
  </field>
</record>


<record id="view_hospital_patient_form" model="ir.ui.view">
  <field name="name">hospital.patient.form</field>
  <field name="model">hospital.patient</field>
  <field name="arch" type="xml">
    <form>
      <sheet>

        <div class="oe_button_box" name="button_box">
          <button class="oe_stat_button" type="object" name="action_view_appointments" icon="fa-star">
            <field string="Appointment" name="appointment_count" widget="statinfo"/>
          </button>
        </div>

            <div class="alert alert-info text-center o_form_header" role="alert"
                 attrs="{'invisible' : [('is_birthday', '=', False)]}">
              <!-- <a class="close" data-dismiss="alert" href="#">X</a> -->
              <div>
                <strong>Today is BirthdAY</strong>
              </div>
              <div> Wish <field name="name" readonly="1"/>
              </div>
            </div>

            <field name="image" widget="image" class="oe_avatar"/>
            <div class="oe_title">
              <h4>
                <field name="ref" readonly="1"/>
              </h4>
              <h1>
                <!-- <label for="name" string="Name" class="oe_edit_only"/> -->
                <field name="name" placeholder="Name"/>
              </h1>
            </div>
        <group>
          <group>
            <field name="date_of_birth" placeholder="Date of Birth"/>
            <field name="age"/>
            <field name="appointment_id"/>
            <field name="appointment_count"/>
            <field name="is_birthday"/>
          </group>
          <group>
            <field name="gender" widget="radio"/>
                                                             <!-- widget="many2many_checkboxes"    also use in this field    -->
            <field name="tag_ids" placeholder="Tags" widget="many2many_tags" options="{'color_field' : 'color'}"/> 
            <field name="active" invisible="1"/>
          </group>
        </group>
        
        <group string="Other Information" name="other_info">
           <group>
            <field name="parent" placeholder="Parent" attrs="{'invisible' : [('age', '&gt;', 18)]}"/>      
            <field name="marital_status" placeholder="Marital Status" attrs="{'readonly' : [('age', '&lt;', 18)]}"/> 
            <field name="partner_name" placeholder="Partner Name" attrs="{'required' : [('marital_status', '=', 'married')], 'readonly':[('marital_status', '!=', 'married')]}"/>          
           </group>

           <group>
              <field name="phone" widget="phone"/>
              <field name="email" widget="email"/>
              <field name="website" widget="url"/>
           </group>
        </group>
      </sheet>
      <div class="oe_chatter">
        <field name="message_follower_ids" groups="base.group_user"/>
        <field name="activity_ids" />
        <field name="message_ids"/>
      </div>
    </form>
  </field>

</record>

<record id="view_hospital_patient_search" model="ir.ui.view">
  <field name="name">hospital.patient.ssearch</field>
  <field name="model">hospital.patient</field>
  <field name="arch" type="xml">
    <search>
          <field name="name" string="Patient Name" filter_domain="['|',('name', 'ilike', self),('ref', 'ilike', self)]"/>
          <field name="ref"/>
          <field name="age"/>
          <field name="gender"/>
          <filter name="filter_male" string="Male" domain="[('gender','=','male')]"/>
          <separator/>
          <filter name="filter_female" string="Female" domain="[('gender','=','female')]"/>
          <filter name="filter_old" string="Old" domain="[('gender','&lt;=','30')]"/>
          <filter name="filter_archived" string="Archived" domain="[('active','&lt;=','False')]"/>

          <group expand="0" string="Group By">
            <filter string="Gender" name="gender" context="{'group_by':'gender'}"/>
          </group>
    <searchpanel>
      <field name="gender" icon="fa-user" select="multi" enable_counter="1"/>
    </searchpanel>
    </search>
  </field>
</record>
    
<record id="action_hospital_patient" model="ir.actions.act_window">
    <field name="name">Patient</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hospital.patient</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
         Create your first patient
        </p>
    </field>
</record>

<menuitem id="menu_patient"
                name="Patient"
                action="om_hospital.action_hospital_patient"
                parent="menu_patient_master"
                sequence="0"/>
  

</odoo>